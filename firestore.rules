rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Employers collection - users can only read/write their own data
    match /employers/{employerId} {
      allow read, write: if request.auth != null && request.auth.uid == employerId;
    }
    
    // Employees collection - users can only read/write their own data
    match /employees/{employeeId} {
      allow read, write: if request.auth != null && request.auth.uid == employeeId;
    }
    
    // Jobs collection - anyone can read, authenticated users can write
    match /jobs/{jobId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        resource.data.employerId == request.auth.uid;
    }
    
    // Applications collection - authenticated users can read/write
    match /applications/{applicationId} {
      allow read, write: if request.auth != null;
      allow update: if request.auth != null && 
        (resource.data.employeeId == request.auth.uid || 
         resource.data.employerId == request.auth.uid);
    }
  }
} 